<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    >

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/ivProfile"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvUsername"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ivProfile"
        android:layout_toEndOf="@+id/ivProfile" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvScreenName"
        android:textSize="10dp"
        android:textColor="@color/lighter_gray"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/tvUsername"
        />

    <com.codepath.apps.mysimpletweets.utils.LinkifiedTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:layout_alignLeft="@+id/tvUsername"
        android:id="@+id/tvTweet"
        android:clickable="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:autoLink="all"
        android:layout_below="@+id/tvUsername"
        android:layout_toRightOf="@+id/ivProfile"
        android:layout_toEndOf="@+id/ivProfile" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/lighter_gray"
        android:id="@+id/tvTimeAgo"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvRTCount"
        android:textColor="@color/lighter_gray"
        android:paddingLeft="5dp"
        android:layout_alignTop="@+id/tvRT"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:src="@drawable/rt"
        android:layout_toLeftOf="@id/tvRTCount"
        android:layout_alignTop="@+id/tvRT"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvFavCount"
        android:textColor="@color/lighter_gray"
        android:layout_alignTop="@+id/tvRTCount"
        android:layout_toLeftOf="@+id/tvTimeAgo"
        android:layout_toStartOf="@+id/tvTimeAgo"
        android:layout_marginRight="42dp"
        android:paddingLeft="5dp"
        android:layout_marginEnd="42dp" />

    <ImageView
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:src="@drawable/fav"
        android:layout_toLeftOf="@id/tvFavCount"
        android:layout_alignTop="@+id/tvRT"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/tvRT"
        android:textColor="@color/lighter_gray"
        android:layout_marginTop="47dp"
        android:paddingLeft="5dp"
        android:layout_below="@+id/ivProfile"
        android:layout_toRightOf="@+id/ivProfile"
        android:layout_toEndOf="@+id/ivProfile" />

    <ImageView
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:src="@drawable/reply"
        android:id="@+id/ivReply"
        android:layout_alignTop="@+id/tvRT"
        android:layout_toRightOf="@+id/tvRT"
        android:layout_toEndOf="@+id/tvRT" />




</RelativeLayout>